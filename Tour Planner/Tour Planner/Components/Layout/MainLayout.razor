@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
    
    <MudLayout>
        <MudAppBar Elevation="1">
            <MudText Typo="Typo.h5" Class="ml-3">Tour Planner</MudText>
            <MudSpacer />
            <MudSwitch @Value="_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="@themeStateString" @onchange="DarkModeToggle"/>
        </MudAppBar>
        <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" @onchange="DrawerToggle">
            <NavMenu />
        </MudDrawer>
        <MudMainContent Class="mt-16 pa-4">
            @Body
        </MudMainContent>
    </MudLayout>


@code {
    private MudTheme _theme = new();
    private bool _isDarkMode;
    private bool _drawerOpen = true;
    private string themeStateString = "Dark Mode";

    private void DarkModeToggle()
    {
        _isDarkMode = !_isDarkMode;
        themeStateString = _isDarkMode ? "Light Mode" : "Dark Mode";
    }
    
    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
