<MudContainer>
    <MudPaper Height="20px" Width="0px" Square="true"></MudPaper>

    <MudText Typo="Typo.h5" ; Align="Align.Justify">
        Manage Tours
    </MudText>
    
    <MudDivider/>
    
    <MudPaper Height="20" Width="0px"></MudPaper>

    <MudList Clickable="true">
        <MudListItem Text="Add" Icon="@Icons.Material.Filled.Add"/>
        <MudDivider DividerType="DividerType.Middle"/>
        <MudListItem Text="Remove" Icon="@Icons.Material.Filled.Remove"/>
        <MudDivider DividerType="DividerType.Middle"/>
        <MudListItem Text="More" Icon="@Icons.Material.Filled.MoreHoriz"/>
        <MudDivider DividerType="DividerType.Middle"/>
    </MudList>

    <MudPaper Height="30px" Width="0" Square="true"></MudPaper>

    <MudText Typo="Typo.h5" ; Align="Align.Justify">
        Tours
    </MudText>

    <MudDivider/>

    <MudList Clickable="true">
        @foreach (var tour in Tours)
        {
            <MudListItem>
                @tour
            </MudListItem>
            <MudDivider DividerType="DividerType.Middle"/>
        }
    </MudList>
</MudContainer>

@code {

    private List<string> Tours = new List<string>
    {
        "Waldviertelweg",
        "Stadtwanderweg 4",
        "Der Höllentrip",
        "Payerbach Schmerz - 2."
    };

}